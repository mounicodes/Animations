<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="80dp"
  android:background="@color/lightgrey"
  app:layout_constraintBottom_toBottomOf="parent">

  <Button
    android:id="@+id/bounce"
    android:layout_width="108dp"
    android:layout_height="43dp"
    android:padding="5dp"
    android:background="@drawable/test_merge"
    android:backgroundTint="@color/mint"
    android:gravity="center"
    android:text="Bounce"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/spring"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/spring"
    android:layout_width="108dp"
    android:layout_height="43dp"
    android:text="Spin"
    android:background="@drawable/test_merge"
    android:backgroundTint="@color/colorPrimary"
    android:gravity="center"
    android:padding="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/button3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/bounce"/>
  <Button
    android:id="@+id/button3"
    android:layout_width="108dp"
    android:layout_height="43dp"
    android:layout_marginEnd="8dp"
    android:padding="5dp"
    android:background="@drawable/test_merge"
    android:backgroundTint="@color/mud"
    android:gravity="center"
    android:text="Button3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/spring"
    tools:layout_editor_absoluteY="1dp"/>

</android.support.constraint.ConstraintLayout>
